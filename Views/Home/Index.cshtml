@model Chef

<style>
    html body{
        background-image: url("images/paper.jpg");
        background-repeat: no-repeat;
        background-size: 100%;
    }

    #link.a {
        display: inline-block;
        text-align: center;
        
    }
    a {
        font-size: 170%;
        color: black;
    }
    #link {
        margin-left: 43%;
    }
    .addchef a{
        font-size: 100%;
        display: inline;
        margin-left: 46%;
        
    }
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    
}

td, th {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
<body>

<div id="link">
    <a href="/">Chef | </a>
    <a href="Food">Dishes</a>
</div>
<br>
<div class="addchef">
<a href="addchef">Add a Chef</a>
</div>
<br><br>
<h4>Check out our roster chefs:</h4>
<br><br>


<div id="cheftable">

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col"># Of Dishes</th>
    </tr>
    
  </thead>
  <tbody>
    @foreach(var x in ViewBag.TotalChefs)
    {
      <tr>
      <th scope="col">@x.FirstName @x.LastName</th>

      <th scope="col">@{ var age = DateTime.UtcNow.Year - x.Birthday.Year;
               @Html.DisplayTextFor(model => age);}</th>
      <th scope="col">@x.CreatedFood.Count</th>

    </tr>
    }
    </tr>
  </tbody>
</table>

</div>
</body>
</html>
